<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Repo Plaza" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://kit.fontawesome.com/1a8ae339df.js" crossorigin="anonymous"></script>
  </head>

  <body>

    <!-- Header Navigation -->    
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          
          <!-- Logo -->
          <div class="flex items-center">
            <%= link_to root_path, class: "flex items-center space-x-2 text-xl font-semibold text-gray-900 hover:text-blue-600 transition-colors" do %>
              <i class="fa-regular fa-folder-closed"></i>
              <span>RepoPlaza</span>
            <% end %>
          </div>

          <!-- Navigation (Desktop) -->
          <div class="hidden md:flex items-center space-x-1">
            <% if user_signed_in? %>

              <%= link_to "Repositories", repositories_path, 
                class: "px-3 py-2 rounded-md text-sm font-medium transition-colors #{'text-blue-600 bg-blue-50' if current_page?(repositories_path)} #{'text-gray-700 hover:text-blue-600' unless current_page?(repositories_path)}" %>
              
                <% if (current_user.nickname == 'admin') %>
                  <%= link_to "Users", users_path, 
                    class: "px-3 py-2 rounded-md text-sm font-medium transition-colors #{'text-blue-600 bg-blue-50' if current_page?(users_path)} #{'text-gray-700 hover:text-blue-600' unless current_page?(users_path)}" %>
                <% end %>
            <% end %>
          </div>

          <!-- User Menu -->
          <div class="flex items-center space-x-4">
            <% if user_signed_in? %>
              <div class="hidden sm:flex items-center space-x-3">
                <div class="flex items-center space-x-2">
                  <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                    <span class="text-white text-sm font-medium">
                      <%= current_user.email.first.upcase %>
                    </span>
                  </div>
                  <span class="hidden lg:block text-sm font-medium text-gray-700">
                    <%= current_user.email %>
                  </span>
                  <span class="hidden lg:block text-sm font-medium text-gray-700">
                    <%= current_user.nickname %>
                  </span>
                </div>
              </div>
              
              <!-- Logout -->
              <%= button_to destroy_user_session_path, method: :delete, 
                    class: "bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded-md text-sm font-medium transition-colors",
                    data: { confirm: "Sure you want to logout?" } do %>
                <span class="hidden sm:inline">Logout</span>
              <% end %>
            <% else %>
              <!-- Login/Register -->
              <div class="flex items-center space-x-3">
                <%= link_to "Login", new_user_session_path, 
                      class: "text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors" %>
                
                <%= link_to "Join the Waiting List", new_waiting_path, 
                      class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
              </div>
            <% end %>
          </div>
          
        </div>
      </div>
    </nav>

    <!-- Flash messages -->
    <% if notice %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 mx-4">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 mx-4">
        <%= alert %>
      </div>
    <% end %>

    <main class="container mx-auto mt-20 mb-12 px-5 flex">
      <%= yield %>
    </main>
  </body>
</html>
