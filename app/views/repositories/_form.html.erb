<%= form_with(model: repository, class: "contents") do |form| %>
  <% if repository.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(repository.errors.count, "error") %> prohibited this repository from being saved:</h2>

      <ul class="list-disc ml-6">
        <% repository.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": repository.errors[:user_id].none?, "border-red-400 focus:outline-red-600": repository.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": repository.errors[:name].none?, "border-red-400 focus:outline-red-600": repository.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": repository.errors[:full_name].none?, "border-red-400 focus:outline-red-600": repository.errors[:full_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :url %>
    <%= form.text_field :url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": repository.errors[:url].none?, "border-red-400 focus:outline-red-600": repository.errors[:url].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :last_commit_at %>
    <%= form.datetime_field :last_commit_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": repository.errors[:last_commit_at].none?, "border-red-400 focus:outline-red-600": repository.errors[:last_commit_at].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :archived %>
    <%= form.check_box :archived, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": repository.errors[:archived].none?, "border-red-400 focus:outline-red-600": repository.errors[:archived].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
