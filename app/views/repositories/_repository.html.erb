<div id="<%= dom_id repository %>" class="w-full sm:w-auto my-6">
  <div class="bg-white shadow-md rounded-xl p-6 space-y-4 border border-slate-200">
    
    <div>
      <strong class="block text-sm font-semibold text-slate-600 mb-1">Name</strong>
      <p class="text-lg font-medium text-slate-800"><%= repository.title %></p>
    </div>

    <div>
      <strong class="block text-sm font-semibold text-slate-600 mb-1">Full name</strong>
      <p class="text-slate-700"><%= repository.description %></p>
    </div>

    <div>
      <strong class="block text-sm font-semibold text-slate-600 mb-1">Url</strong>
      <%= link_to repository.url, repository.url, class: "text-blue-600 hover:underline break-all" %>
    </div>

    <div>
      <strong class="block text-sm font-semibold text-slate-600 mb-1">Last commit at</strong>
      <p class="text-slate-700"><%= repository.last_commit_at %></p>
    </div>

    <div>
      <strong class="block text-sm font-semibold text-slate-600 mb-1">Archived</strong>
      <span class="<%= repository.archived? ? 'text-red-600 font-semibold' : 'text-green-600 font-semibold' %>">
        <%= repository.archived? ? "Yes" : "No" %>
      </span>
    </div>
  </div>
</div>
