<div id="<%= dom_id user %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Provider:</strong>
    <%= user.provider %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Uid:</strong>
    <%= user.uid %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Nickname:</strong>
    <%= user.nickname %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= user.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Email:</strong>
    <%= user.email %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Token:</strong>
    <%= user.token %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Token expires at:</strong>
    <%= user.token_expires_at %>
  </div>
</div>
