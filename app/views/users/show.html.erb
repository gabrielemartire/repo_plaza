<% content_for :title, "User Details" %>

<div class="max-w-4xl mx-auto p-8">
  <% if notice.present? %>
    <div class="mb-6 bg-green-50 border border-green-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800" id="notice"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-8 bg-gradient-to-r from-blue-600 to-indigo-600 px-4 py-8">
      <div class="flex items-center">
        <div class="flex-shrink-0">
        </div>
        <div class="ml-6">
          <div class="flex items-center">
            <h2 class="text-2xl font-bold text-white">
              <%= @user.name.present? ? @user.name : 'John Doe' %>
            </h2>
            <% if @user.role.present? && @user.role != 'user' %>
              <span class="ml-3 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800 border-2 border-orange-200">
                <%= @user.role.upcase %> - RUOLO ANOMALO
              </span>
            <% end %>
          </div>
          <p class="text-blue-100"><%= @user.email %></p>
          <% if @user.nickname.present? && @user.name.present? %>
            <p class="text-blue-200 text-sm">Nickname: <%= @user.nickname %></p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="px-6 py-6">
      <dl class="grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">ID Utente</dt>
          <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @user.id %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Provider</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @user.provider.present? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <% provider_icon = case @user.provider
                  when 'twitter'
                    '<i class="fa-twitter fa-brands text-blue-500 text-md mr-1"></i>'
                  when 'github'
                    '<i class="fa-github fa-brands text-gray-800 text-md mr-1"></i>'
                  when 'linkedin'
                    '<i class="fa-linkedin fa-brands text-blue-700 text-md mr-1"></i>'
                  else
                    '<i class="fa-lock fa-solid text-gray-400 text-md mr-1"></i>'
                  end
                %>
                <%= raw provider_icon %>
                <%= @user.provider.capitalize %>
              </span>
            <% else %>
              <span class="text-gray-400">Non specificato</span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">UID Provider</dt>
          <dd class="mt-1 text-sm text-gray-900 font-mono">
            <%= @user.uid.present? ? @user.uid : content_tag(:span, "Non disponibile", class: "text-gray-400") %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Ruolo</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @user.role.present? %>
              <% if @user.role == 'user' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= @user.role.capitalize %>
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  <%= @user.role.capitalize %>
                </span>
              <% end %>
            <% else %>
              <span class="text-gray-400">Non specificato</span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Data Creazione</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @user.created_at.strftime("%d/%m/%Y alle %H:%M") %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Ultimo Aggiornamento</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @user.updated_at.strftime("%d/%m/%Y alle %H:%M") %>
          </dd>
        </div>

        <% if @user.token_expires_at.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Scadenza Token</dt>
            <dd class="mt-1 text-sm">
              <% if @user.token_expires_at < Time.current %>
                <span class="text-red-600 font-medium">
                  <%= @user.token_expires_at.strftime("%d/%m/%Y alle %H:%M") %> (Scaduto)
                </span>
              <% else %>
                <span class="text-green-600 font-medium">
                  <%= @user.token_expires_at.strftime("%d/%m/%Y alle %H:%M") %>
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if @user.remember_created_at.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Remember Me Creato</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @user.remember_created_at.strftime("%d/%m/%Y alle %H:%M") %>
            </dd>
          </div>
        <% end %>

        <% if @user.reset_password_sent_at.present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Ultimo Reset Password</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @user.reset_password_sent_at.strftime("%d/%m/%Y alle %H:%M") %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>

    <% if @user.token.present? || @user.reset_password_token.present? || @user.encrypted_password.present? %>
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 px-4 py-8">
        <h3 class="text-lg font-medium text-gray-900 mb-3">Informazioni di Sicurezza</h3>
        <div class="space-y-2">
          <% if @user.encrypted_password.present? %>
            <p class="text-sm text-gray-600">
              <span class="font-medium">Password:</span> 
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
                Configurata
              </span>
            </p>
          <% end %>
          <% if @user.token.present? %>
            <p class="text-sm text-gray-600">
              <span class="font-medium">Token API:</span> 
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                Presente (nascosto per sicurezza)
              </span>
            </p>
          <% end %>
          <% if @user.reset_password_token.present? %>
            <p class="text-sm text-gray-600">
              <span class="font-medium">Reset Token:</span> 
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                Attivo
              </span>
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
        <div class="mt-4 sm:mt-0 flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2 px-4 py-8">
        <%= link_to edit_user_path(@user), class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Modifica
        <% end %>
        <%= link_to users_path, class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Torna alla lista
        <% end %>
        <%= button_to @user, method: :delete, 
            form_class: "inline-block",
            class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
            data: { 
              turbo_confirm: "Sei sicuro di voler eliminare questo utente? Questa azione non puÃ² essere annullata.",
              turbo_method: :delete
            } do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Elimina
        <% end %>
      </div>
  </div>
</div>
